<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Holo.Theme">
        <item name="actionBarItemBackground">@drawable/selectable_background_katbag</item>
        <item name="popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Katbag</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Katbag</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Katbag</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Katbag</item>
        <item name="actionModeBackground">@drawable/cab_background_top_katbag</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_katbag</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Katbag</item>
    </style>

    <style name="ActionBar.Solid.Katbag" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_katbag</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_katbag</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_katbag</item>
        <item name="progressBarStyle">@style/ProgressBar.Katbag</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle.Katbag</item>
    </style>

    <style name="ActionBar.TitleTextStyle.Katbag" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_text_color_actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Katbag" parent="@style/Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ab_transparent_katbag</item>
        <item name="progressBarStyle">@style/ProgressBar.Katbag</item>
    </style>

    <style name="PopupMenu.Katbag" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_katbag</item>
    </style>

    <style name="DropDownListView.Katbag" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_katbag</item>
    </style>

    <style name="ActionBarTabStyle.Katbag" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_indicator_ab_katbag</item>
    </style>

    <style name="DropDownNav.Katbag" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_background_ab_katbag</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_katbag</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_katbag</item>
    </style>

    <style name="ProgressBar.Katbag" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_katbag</item>
    </style>

    <style name="ActionButton.CloseMode.Katbag" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="background">@drawable/btn_cab_done_katbag</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Katbag.Widget" parent="@style/Holo.Theme">
        <item name="popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Katbag</item>
    </style>

    <!-- estilos personalizados -->

    <style name="subtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- menu items -->

    <style name="menu_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:background">@drawable/row_menu</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">changeFragment</item>
    </style>

    <style name="menu_image_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/image_description</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/menu_item</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- generic items -->

    <style name="generic_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="generic_row_clickable_base" parent="generic_row">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="generic_row_clickable" parent="generic_row_clickable_base">
        <item name="android:background">@drawable/row_generic</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="generic_row_no_clickable" parent="generic_row_clickable_base">
        <item name="android:background">@drawable/row_generic</item>
    </style>

    <style name="generic_row_for_input" parent="generic_row">
        <item name="android:background">@drawable/row_generic_default</item>
    </style>

    <style name="generic_image_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/image_description</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="image_row_game" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_game</item>
    </style>

    <style name="image_row_book" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_book</item>
    </style>

    <style name="image_row_comic" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_comic</item>
    </style>

    <style name="image_row_worlds" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_worlds</item>
    </style>

    <style name="image_row_drawings" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_drawings</item>
    </style>

    <style name="image_row_developments" parent="generic_image_row">
        <item name="android:src">@drawable/katbag_icon_developments</item>
    </style>

    <style name="generic_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/generic_item_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="generic_item_title_1" parent="generic_item_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="generic_item_title_2" parent="generic_item_title">
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="generic_item_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/generic_item_subtitle</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="generic_image_wrap_arrow_right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="image_row_base_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/image_description</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="image_arrow_right" parent="image_row_base_right">
        <item name="android:src">@drawable/katbag_arrow_right</item>
    </style>

    <style name="image_row_remove" parent="image_row_base_right">
        <item name="android:src">@drawable/katbag_icon_remove</item>
    </style>

</resources>