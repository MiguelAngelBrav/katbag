<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_layout"
    android:orientation="vertical" >

    <LinearLayout 
        android:id="@+id/world_row"
        style="@style/generic_row_no_clickable"
        android:clickable="false" >

        <ImageView style="@style/image_row_worlds" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/world_name_row"
                style="@style/generic_item_title_1"
                android:text="@string/config_app_worlds_title" />
        </LinearLayout>

        <LinearLayout style="@style/generic_image_wrap_arrow_right" >

            <ImageView
                android:id="@+id/world_row_image_arrow"
                style="@style/image_arrow_right" />

            <ImageView
                android:id="@id/world_row_image_remove"
                style="@style/image_row_remove"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/world_id_row"
        style="@style/generic_item_title_1"
        android:visibility="gone" />

</LinearLayout>