<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Holo.Theme.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_katbag</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Katbag</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Katbag</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Katbag</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Katbag</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_katbag</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_katbag</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Katbag</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Katbag.Widget</item>
    </style>

    <style name="ActionBar.Solid.Katbag" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_katbag</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_katbag</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_katbag</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Katbag</item>
    </style>

    <style name="ActionBar.Transparent.Katbag" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_katbag</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Katbag</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Katbag.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Katbag</item>
    </style>

</resources>