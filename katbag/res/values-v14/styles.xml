<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="@style/Holo.Theme">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_katbag</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Katbag</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Katbag</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Katbag</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Katbag</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_katbag</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_katbag</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Katbag</item>
    </style>

    <style name="ActionBar.Solid.Katbag" parent="@style/Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_katbag</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_katbag</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_katbag</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Katbag</item>
        <item name="titleTextStyle">@style/ActionBar.TitleTextStyle.Katbag</item>
    </style>

    <style name="ActionBar.TitleTextStyle.Katbag" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/title_text_color_actionbar</item>
    </style>

    <style name="ActionBar.Transparent.Katbag" parent="@style/Widget.Sherlock.ActionBar">
        <item name="android:background">@drawable/ab_transparent_katbag</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Katbag</item>
    </style>

    <style name="PopupMenu.Katbag" parent="@style/Widget.Sherlock.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_katbag</item>
    </style>

    <style name="DropDownListView.Katbag" parent="@style/Widget.Sherlock.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_katbag</item>
    </style>

    <style name="ActionBarTabStyle.Katbag" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_katbag</item>
    </style>

    <style name="DropDownNav.Katbag" parent="@Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_katbag</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_katbag</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_katbag</item>
    </style>

    <style name="ProgressBar.Katbag" parent="@style/Widget.Sherlock.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_katbag</item>
    </style>

    <style name="ActionButton.CloseMode.Katbag" parent="@style/Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_katbag</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Katbag.Widget" parent="@style/Holo.Theme">
        <item name="android:popupMenuStyle">@style/PopupMenu.Katbag</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Katbag</item>
    </style>

</resources>