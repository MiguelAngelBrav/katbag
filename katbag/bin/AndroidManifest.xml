<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.ipp.katbag"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="cl.ipp.katbag.RootActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Board"
            android:label="@string/title_activity_board" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Add"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.SelectTypeMainActivity"
            android:label="@string/title_activity_select_type" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Worlds"
            android:label="@string/title_activity_worlds" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Drawings"
            android:label="@string/title_activity_drawings" >
        </activity>
        <activity
            android:name="cl.ipp.katbag.fragment.Developments"
            android:label="@string/title_activity_developments" >
        </activity>
    </application>

</manifest>